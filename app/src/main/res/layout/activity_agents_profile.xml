<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context=".agentsProfileActivity">

    <ImageView
        android:id="@+id/agentsProfileImage"
        android:layout_width="215dp"
        android:layout_height="136dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="20sp"
        android:src="@mipmap/default_user_foreground" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="20sp"
        android:text="Tap to upload an image"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/agentsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:background="@color/cardview_light_background"
        android:gravity="center"
        android:hint="Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/agentsCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:background="@color/cardview_light_background"
        android:gravity="center"
        android:hint="Car"
        android:textSize="20sp" />

    <Button
        android:id="@+id/agentProfileBack"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/cardview_light_background"
        android:text="back"
        android:textColor="@color/colorPrimaryDark" />


</LinearLayout>